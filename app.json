{
  "expo": {
    "name": "Bill Buckz",
    "slug": "bill-bucks-x",
    "version": "1.1.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "@react-native-firebase/app",
      "@react-native-firebase/auth",
      "@react-native-firebase/messaging"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.devcodersubha.billbucks"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "notification": {
        "icon": "./assets/images/adaptive-icon.png",
        "color": "#ffffff"
      },
      "versionCode": 13,
      "package": "com.devcodersubha.billbucks",
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "VIBRATE",
        "WAKE_LOCK",
        "RECEIVE_BOOT_COMPLETED",
        "POST_NOTIFICATIONS",
        "INTERNET",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "READ_CONTACTS",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION"
      ],
      "softwareKeyboardLayoutMode": "pan",
      "windowSoftInputMode": "adjustResize",
      "navigationBarColor": "transparent",
      "statusBarColor": "transparent",
      "windowTranslucentStatus": true,
      "windowTranslucentNavigation": true,
      "androidWindowEdgeToEdge": true,
      "androidWindowLayoutInDisplayCutoutMode": "never",
      "useNextNotificationsApi": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "8591f423-2e01-4a7b-9488-2b5801c6c3e7"
      }
    }
  }
}
